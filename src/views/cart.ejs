<%- layout('layouts/main') %>
<div class="container mt-3">
    <h5 class="text-center">My cart</h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product) => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product._id %></td>
            <% }) %>
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th><%= total %></th>
                <th>
                    <form class="text-center" action="/send-order" method="POST">
                        <button class="btn btn-primary mb-3" type="submit">Finalizar pedido</button>
                    </form>
                </th>
            </tr>
        </tfoot>
    </table>
</div>